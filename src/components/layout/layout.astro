---
import '../../global.css';
import '../../theme.css';

import { body } from './layout.css';
import Nav from './nav.astro';
---

<html lang='ko'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel='icon' href='/favicon.svg' />
    <link rel='preload' href='/fonts.css' as='style' />
    <link rel='stylesheet' href='/fonts.css' />
    <title>imtica</title>
    <script
      is:inline
      set:html={`(()=>{const e=localStorage.getItem("theme");document.documentElement.dataset.theme="light"===e||"dark"===e?e:matchMedia("(prefers-color-scheme:dark)").matches?"dark":"light"})()`}
    />
  </head>
  <body class={body}>
    <Nav />
    <slot />
    <script>
      import { init } from '../../stores/theme';
      init();
    </script>
  </body>
</html>
